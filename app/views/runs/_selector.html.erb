<%= form_for [@user, run] do |f| %>
<div class="row">
  <div class="col s8">
    <%= f.label :goal_id, remote: true %>
    <%= f.select(:goal_id, @user.goals.collect{|goal| [goal.name, goal.id]}) %>
  </div>
  <div class="col s4">
    <%= f.submit class: 'btn-small' %>
  </div>
</div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('select').material_select();
  });
</script>
