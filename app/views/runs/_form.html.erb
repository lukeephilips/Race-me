<%= form_for [@user, @run] do |f| %>
  <%# f.label :start_location %>
  <%# f.text_field :start_location %>

  <%= f.label :total_distance %>
  <%= f.text_field :total_distance %>


  <%= f.label :total_time %>
  <%= f.text_field :total_time %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :travel_method %>
  <%= f.text_field :travel_method %>


  <%= f.label :goal_id %>
  <%= f.select :goal_id, @goals, id: 'run-select'  %>
  <%= f.submit class: 'btn' %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('select').material_select();
  });
</script>
