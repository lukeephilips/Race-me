<!DOCTYPE html>
<html>
  <head>
    <title>RaceMeRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <div class="nav-margin">
          <%= link_to "Race Me", root_path, class: 'brand-logo' %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <% if @access_token %>
              <li>Signed in as <%= session[:athlete]['firstname'] %></li>
              <% else %>
                <li><%= link_to 'Sign into Strava', "https://www.strava.com/oauth/authorize?client_id=16390&response_type=code&redirect_uri=http://localhost:3000/token_exchange" %></li>
            <% end %>
            <% if current_user %>
            <li><%= link_to 'View Runs', user_runs_path(current_user) %></li>
            <li><%= link_to 'View Goals', user_goals_path(current_user.id) %></li>
            <li><%= link_to "Log out, #{current_user.name}", destroy_user_session_path, method: 'delete' %></li>
            <% else %>
            <li><%= link_to 'Log In', new_user_session_path %>  </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= image_tag 'x.png', class: 'x' %>
        <h6 class="message"><%= value %></h6>
      </div>
    <% end %>
  </div>
    <div class="container">
      <%= yield %>
    </div>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap">
    </script>
  </body>
</html>
