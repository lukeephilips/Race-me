<div class="row">
  <!-- <div class="col s10 offset-s1"> -->
    <div class="carousel carousel-slider center" data-indicators="true">
      <% banner_pics.each do |pic| %>
        <%= image_tag "running_pics/#{pic}", class: 'carousel-item' %>
      <% end %>
    </div>
  <!-- </div> -->
</div>
<div class="row">
  <div class="col s4 card">
    <div class="row">
      <% if @athlete %>
      <%= @athlete['firstname'] %> <%= @athlete['lastname'] %><br>
      <%= image_tag @athlete['profile_medium'], class: "profile_small circle" %>
      <% end %>
    </div>
    <% if @friends %>
    <div class="row">
      <h2>Friends:</h2>
      <% @friends.each do |friend| %>
        <ul><%= friend['firstname'] %></ul>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
  <% if @activities %>
    <% @activities.each do |activity| %>
    <div class="row">
      <div class="col s6">
        <h5><%= activity['name'] %></h5>
        <span>Date: <%= Time.parse(activity['start_date_local']).month %>/<%= Time.parse(activity['start_date_local']).day %>/<%= Time.parse(activity['start_date_local']).year %></span><br>
        <span>Start lat-lng: <%= activity['start_latlng'] %></span><br>
        <span>End lat-lng: <%= activity['end_latlng'] %></span><br>
        <span>Distance: <%= convert_meters_to_miles(activity['distance'],2) %> miles</span><br>
        <span>Elevation Gain: <%= activity['total_elevation_gain'] %></span><br>
        <span>Type: <%= activity['type'] %></span><br>
        <span>ID: <%= activity['id'] %></span>
      </div>
      <div class="col s6">
        <p>MAP</p>

        </div>

    </div>
    <hr>
    <% end %>
  <% end %>
